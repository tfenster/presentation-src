@model List<ArtistWithAlbumCount>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="container container-fluid">
    <error-display [error]="error"></error-display>

    <div class="list-group">
        <a href="#" class="list-group-item active">
            <i class="fa fa-list"></i> Artists
            <span class="badge">@Model.Count</span>
        </a>

        @foreach (var artist in Model)
        {
            <a class="list-group-item"
               href="artist/@artist.Id" role="button">
                <i class="fa fa-users" style="color: steelblue;"></i> &nbsp;
                <span class="badge">@artist.AlbumCount</span>
                @artist.ArtistName
            </a>
        }
    </div>
</div>
